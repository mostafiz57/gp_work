//color
$font-face: "Open Sans" sans-serif
$light-grey: #f9f9f9
$grey: #efefef
$dark-grey: #dddddd
$light-green: #7ebf22
$green: #589600
$text-dark: #333333
$text-light: #9f9f9f

$font-size: 12px
$padding: 10px
$margin: 10px

body
	font-family: $font-face
	color: $text-dark
	font-size: $font-size
	line-height: 1.4em

a
	color: $light-green
	transition: all 0.3s ease-out
	&:hover, &:focus
		color: $green
		transition: all 0.3s ease-out
.btn
	font-weight: bold
	text-transform: capitalize
	font-size: 1em
.btn-primary
	background-color: $light-green
	transition: all 0.3s ease-out
	border-color: $light-green
	&:hover, &:focus, &.active
		background-color: $green
		border-color: $green
		transition: all 0.3s ease-out
.primary
	background-color: $light-green
	color: white
	a
		color: white
	&:hover, &:focus, &:active
		background-color: $green !important
		color: white
.light
	color: $text-light

input.form-control
	border-radius: 2px
	border: 1px solid $grey
	padding: $padding/2
	&:hover, &:focus, &:active
		outline: none
		-webkit-appearance: none

.navbar
	border: none
	background-color: #222
.navbar-inverse
	.navbar-brand
		color: #fff
		font-size: 22px
	.navbar-nav
		li
			a
				font-size: 1.1em
				color: white
				border-right: 1px solid $text-dark
				&:hover, &:active, &:focus
					color: $light-green
			&.active
				background-color: #000
			&.user-card
				ul
					a
						color: $text-dark
						&:hover
							color: darken($text-dark, 10%)

.subnav
	border: none
	border-radius: 0
	background-color: rgba(0, 0, 0, 0.6)

//============home page only===========
#main
	.home-bg
		background-image: url("../img/home-bg.jpg")
		background-repeat: no-repeat
		background-size: cover
		.welcome
			color: white
			text-shadow: 1px 1px 4px rgba(0, 0, 0,0.8)
			p
				font-size: 1.2em
		.form-control
			border: none
			outline: none
			border-left: 1px solid $grey
			box-shadow: none
			background-color: white
			&:hover, &:focus, &:active
				-webkit-appearance: none
				outline: none
				box-shadow: none
				border: none
				border-left: 1px solid $grey
		.input-group
			padding: $padding 0
			border: 1px solid $grey
			border-radius: 2px
			background-color: white
		.input-group-addon
			background-color: white
			border: none

.panel-default
	background-color: $light-grey
	opacity: 0.95
	border: 1px solid $grey
	border-radius: 5px


.panel-login
	.panel-heading
		padding: $padding*3 $padding $padding*3 $padding*5
		font-weight: bold
		text-transform: capitalize
		font-size: 1.4em
		position: relative
		i.circle-fill
			position: absolute
			line-height: 60px
			width: 60px
			background-color: $light-green
			border-radius: 100%
			text-align: center
			font-size: 1.5em
			color: white
			top: 50%
			left: 0
			margin-top: -30px
			margin-left: -30px



//=========== DASHBOARD =============
#main
	position: absolute
	top: 50px
	bottom: 0
	left: 0
	right: 0
	.viewport
	aside
		position: absolute
		top: 0
		bottom: 0
		left: 0
		&.device-group-list
			width: 250px
			border-right: 1px solid #d8d8d8
			background-color: darken($light-grey, 2%)
		&.report-type-list, &.admin
			width: 80px
			background-color: #333
			ul
				li
					cursor: pointer
					position: relative
					border-bottom: 1px solid #222
					border-top: 1px solid #555
					padding: 15px 5px
					font-size: 12px
					text-transform: capitalize
					a, a:hover
						text-decoration: none
						color: #ccc
					i.fa
						font-size: 24px
					p
						margin-bottom: 0
						line-height: 20px
					&:last-child
						border-bottom: none
					&:first-child
						border-top: none
					&:after
						content: ""
						position: absolute
						right: 0px
						top: 50%
						margin-top: -8px
						border-top: 8px solid #222
						border-right: 8px solid #fff
						border-bottom: 8px solid #222
						border-left: 0px
						display: none
					&:hover
						background-color: #2e2e2e
						a
							color: #fff
					&.active
						background-color: #222
						border-top-color: #222
						a
							color: #fff
						&:after
							display: block
		&.report-type-list
			width: 80px
			ul
				li
					text-align: center
		&.admin
			width: 150px
			ul
				li
					padding: 15px 10px
					line-height: 20px
					i.fa
						width: 30px
						text-align: center
						font-size: 20px


	.map
		left: 250px
		top: 0
		bottom: 0
		right: 0
		position: absolute
		overflow: hidden
#map-canvas
	height: 100%

	.device-list
		.panel
			background-color: transparent
			border: none
			border-radius: 0
			border-bottom: white
			margin: 0
			.panel-heading
				background-color: transparent
				border: none
				border-radius: 0
				border-top: 1px solid white
				border-bottom: 1px solid darken($grey, 5%)
				cursor: pointer
				transition: all 0.3s ease-out
				&:hover
					background-color: darken(#d8d8d8, 1%)
					transition: all 0.3s ease-out
				.panel-title
					font-size: 14px
					a:hover
						text-decoration: none
						color: #333
			.panel-body
				background-color: white
				border-bottom: 1px solid darken($grey, 2%)
				border-top: none

.scrollable
	overflow-x: hidden
	overflow-y: hidden
	&:hover
		overflow-y: auto
	.wrapper
		overflow: hidden
		width: 250px

.control-pallete
	height: 40px
	padding: 5px
	ul
		margin-bottom: 0
	input[type="text"]
		border: 1px solid #d8d8d8
		line-height: 16px
		padding: 4px
		border-radius: 12px

.device-list
	position: absolute
	top: 50px
	bottom: 50px
	left: 0
	right: 0
	.control-group
		margin-bottom: 0px
		li
			i
				font-size: 16px
				color: #aaa
				cursor: pointer
				&.active, &:hover
					color: #000
					border-color: #000
				&.fa-terminal
					font-size: 12px
					padding: 1px
					border: 1px solid #aaa
	.device
		padding: 5px 0px
		cursor: pointer
		transition: all 0.3s ease-out
		&.active, &:hover
			font-weight: bold
			transition: all 0.3s ease-out
	&.history-page
		top: 150px

.footer
	position: absolute
	bottom: 0
	left: 0
	right: 0
	text-align: center

.marker-label
	background-color: #fff
	padding: 2px 4px
	border: 1px solid #666

.info-panel
	background-color: #fff
	border: 1px solid #d8d8d8
	opacity: 0.7
	position: absolute
	z-index: 900
	top: 50px
	right: 20px
	height: 300px
	width: 260px
	box-shadow: 0px 0px -1px 5px rgba(0, 0, 0, 0.6)
	transition: all 0.3s ease-out
	overflow: hidden
	.heading
		text-align: center
		padding: 10px
		background-color: #fb921d
		font-weight: bold
		color: white
	&:hover, &:focus
		opacity: 1
		transition: all 0.3s ease-out
	.nav-tabs, .nav-tabs-justified
		border-bottom: none
		li
			a
				border-color: transparent
				border-radius: 0
				cursor: pointer
				border-bottom: 3px solid #f7f7f7
				&:hover
					border-color: transparent
					border-bottom: 3px solid $green
			&.active
				a, a:hover
					border: none
					border-bottom: 3px solid $green
	.tab-content
		padding: 10px
		overflow: hidden
		&:hover
			overflow-y: auto
		table
			td
				padding: 5px 10px


#time-machine
	position: absolute
	bottom: 0
	left: 0
	right: 0
	height: 60px
	background-color: #fff
	z-index: 901
	#progress-bar
		height: 4px
		width: 100%
		background-color: #ff0000
		border: 0px
		outline: none
	.control-button
		height: 60px
		padding: 5px 20px
	.btn-play
		height: 50px
		line-height: 42px
		padding: 0
		width: 50px
		text-align: center
		font-size: 20px
		color: darken(#d8d8d8, 3%)
		&:hover
			color: darken(#d8d8d8, 20%)
	.profile-pic
		position: relative
		display: inline
		border: 1px solid darken(#d8d8d8, 3%)
		line-height: 30px
		padding: 10px

.datetime-picker
	display: inline-block
	button
		height: 30px
		border: 1px solid #eee
		padding: 0 10px
		background-color: #fff
		&:hover
			border-color: #ccc
	.holder
		position: relative
		display: inline-block
		.popup
			z-index: 999
			background-color: #fff
			position: absolute
			bottom: 30px
			padding: 5px
			border: 1px solid #e3e3e3
			box-shadow: 0px -2px 5px 0px rgba(0, 0, 0, 0.3)

#content-wrapper
	padding: 20px 20px 20px 100px
	&.admin
		padding-left: 170px
